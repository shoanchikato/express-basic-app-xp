extends template/main.template.pug

block main
    body
        h1 Registration Page 
        if error 
          p error: #{error.message}

        form(action="/auth/register", method="post") 
            input(type="hidden", name="_csrf" value=csrfToken)
            div
                label(for="name") name
                br
                input#name(type="text", name="name" required)
            br
            div
                label(for="last_name") last name
                br
                input#name(type="text", name="last_name" required)
            br
            div
                label(for="email") email/username
                br
                input#name(type="email", name="email" required)
            br
            div
                label(for="password") password
                br
                input#password(type="password", name="password" required minLength="8")
            br
            div
                label(for="role") role 
                br
                select#role(name="role" required) 
                    option(value="" disabled selected) select role 
                    option(value="1") admin
                    option(value="2") user
            br
            if error 
                if error.validation 
                    div
                        span #{error.validation}
                    br

            button(type="submit") Register