doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Express App
    body 
        h1 Hello world! 
        h2 Posts 
        for post in posts 
            div 
                a(href=`/pages/${post.id}`)
                    h3 #{post.id}) #{post.title}
                p #{post.body}